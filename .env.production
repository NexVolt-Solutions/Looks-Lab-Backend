# App environment
ENV=production
APP_NAME=looks-lab
APP_URL=https://api.looks-lab.com
CORS_ORIGINS=https://looks-lab.com,https://app.looks-lab.com
TRUSTED_HOSTS=api.looks-lab.com,looks-lab.com

# Database (AWS RDS)
DATABASE_URI=postgresql://prod_user:StrongPasswordHere@your-rds-endpoint.ap-south-1.rds.amazonaws.com:5432/looks_lab

# Cache / Queue (AWS ElastiCache Redis)
REDIS_URL=redis://your-elasticache-endpoint.ap-south-1.cache.amazonaws.com:6379/0

# JWT / Security
JWT_SECRET=9f3c1d7a2b6e4f8c9d0a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7b8
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_DAYS=30

# Storage (AWS S3 + CloudFront)
LOCAL_STORAGE_PATH=./media
AWS_REGION=ap-south-1
AWS_S3_BUCKET=looks-lab-media
AWS_S3_PUBLIC_BUCKET=looks-lab-public
AWS_S3_BASE_URL=https://looks-lab-media.s3.ap-south-1.amazonaws.com
CLOUDFRONT_DOMAIN=dxxxxxxxxxxxx.cloudfront.net
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY

# Logging / Monitoring
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true
ENABLE_SENTRY=true
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/123456
ENABLE_SECURITY_HEADERS=true

# AI / External APIs
GEMINI_API_KEY=your_real_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Email (AWS SES)
EMAIL_PROVIDER=ses
SES_REGION=ap-south-1
SES_SENDER=noreply@looks-lab.com

# Social Login
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
APPLE_CLIENT_ID=com.yourcompany.yourapp
APPLE_TEAM_ID=your-team-id
APPLE_KEY_ID=your-key-id
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
